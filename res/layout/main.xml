<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:columnCount="3"
    android:useDefaultMargins="true" >

    <!-- === Row 0 === -->

    <TextView
        android:id="@+id/row0"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:text=" --- " />

    <TextView
        android:id="@+id/row1"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:text=" --- " />

    <TextView
        android:id="@+id/row2"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:text=" --- " />

    <!-- === Row 1 === -->

    <TextView
        android:id="@+id/lblRevolvingSpeed"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="1"
        android:text="@string/revolvingSpeed" />

    <TextView
        android:id="@+id/valAllTimeHigh"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:text="all time" />

    <TextView
        android:id="@+id/unitsRpmAllTimeHigh"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:text="@string/rpmUnits" />

    <!-- === Row 2 === -->

    <TextView
        android:id="@+id/lblAllTimeHigh"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="2"
        android:text="@string/allTimeHigh" />

    <TextView
        android:id="@+id/valRevolvingSpeed"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:text="revolving" />

    <TextView
        android:id="@+id/unitsRpmRevolvingSpeed"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:text="@string/rpmUnits" />

    <Button
        android:id="@+id/start"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:onClick="startRecording"
        android:text="@string/start" />

    <Button
        android:id="@+id/stop"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:onClick="stopRecording"
        android:text="@string/stop" />

    <Button
        android:id="@+id/clear"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_row="3"
        android:onClick="clearHandler"
        android:text="@string/clear" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="4"
        android:orientation="horizontal"
        android:padding="0dp" >
    </LinearLayout>

</GridLayout>
